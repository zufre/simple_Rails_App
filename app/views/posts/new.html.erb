<h1>Create Post</h1>
<%= form_for :post, url: posts_path do |f| %>

  <div class="form-group"><br>
  <%= f.label:title %>
  <%= f.text_field(:title, {:class => 'form-contro'}) %>
  </div>
  <div class="form-group"><br>
  <%= f.label:body %>
  <%= f.text_area(:body, {:class => 'form-contro'}) %>
  </div>
  <p>
    <%= f.submit({:class => 'btn btn-primary'}) %>
  </p>
<% end %>


